{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <section id="register" style="padding-top: 50px;">
            <form method="post">
                <div class="form-row mb-3">
                    <div class="form-group col-md-6">
                        <label for="userFirstName" class="ml-1">Votre prénom :</label>
                        <input class="form-control" type="text" id="userFirstName" name="userFirstName" placeholder="Votre prénom" />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="userName" class="ml-1">Votre nom :</label>
                        <input class="form-control"  type="text" id="userName" name="userName" placeholder="Votre nom" />
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="registerPseudo" class="ml-1">Votre pseudo :</label>
                    <input class="form-control" type="text" id="registerPseudo" name="registerPseudo" placeholder="Votre pseudo" />
                </div>

                <div class="form-row mb-3">
                    <div class="form-group col-md-6">
                        <label for="email" class=" ml-1">Votre email :</label>
                        <input class="form-control" type="email" id="email" name="email" placeholder="Votre email" />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="confirmEmail" class="ml-1">Confirmez votre email :</label>
                        <input class="form-control" type="email" id="confirmEmail" name="confirmEmail" placeholder="Confirmez votre email" />
                    </div>
                </div>

                <div class="form-row mb-3">
                    <div class="form-group col-md-6">
                        <label for="registerPassword" class="ml-1">Votre mot de passe :</label>
                        <input class="form-control" type="password" id="registerPassword" name="registerPassword" placeholder="Votre mot de passe" />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="confirmPassword" class="ml-1">Confirmez votre mot de passe :</label>
                        <input class="form-control" type="confirmPassword" id="confirmPassword" name="confirmPassword" placeholder="Confirmez votre mot de passe :" />
                    </div>
                </div>

                <div class="row justify-content-center">
                    <button class="btn btn-secondary col-md-4">Validez</button>
                </div>


            </form>
        </section>
    </div>

{% endblock %}
